{
    "name": "mvp-template-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "backend",
        "frontend"
    ],
    "scripts": {
        "dev": "concurrently \"pnpm --filter backend run dev\" \"pnpm --filter frontend run dev\"",
        "build": "pnpm --filter backend run build && pnpm --filter frontend run build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "db:migrate": "pnpm --filter backend run migrate",
        "db:seed": "pnpm --filter backend run seed"
    },
    "devDependencies": {
        "concurrently": "^8.2.0"
    }
}